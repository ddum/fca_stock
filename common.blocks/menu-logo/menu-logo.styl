.menu-logo{
    display: table;
    height: auto;
    width: auto;
    padding: 0;

    &__item {
        display: table-cell;
        width: 100px;
        height: 52px;
        padding: 0 25px;

        & .link{
            display: block;
            height: 100%;
            width: 100%;
        }

        & .link_brand_alfaromeo{
            background: url('../../img/logo_sprite.png') center 0px;
        }

        & .link_brand_fiat{
            background: url('../../img/logo_sprite.png') center 159px;
        }

        & .link_brand_jeep{
            background: url('../../img/logo_sprite.png') center 106px;
        }

        & .link_brand_fiatprofessional{
            background: url('../../img/logo_sprite.png') center 53px;
        }
    }
}

@media screen and (max-width: 550px) {
    .menu-logo{
        &__item {
            padding: 0;
        }
    }
}
